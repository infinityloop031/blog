
<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @article.text %>

  <strong>Avatar:</strong>
  <%= image_tag @article.avatar%>

  <strong>Categories=> </strong>
  <%= Category.where(id:ArticleCategory.where(article_id:@article.id).pluck(:category_id)).pluck(:name).each {|x| x} %>

<p><%=notice%>
</p>
 
<h2>Comments</h2>
<%= render @article.comments %>
 
<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<% if current_user.role!="customer" %> 
  <%= link_to 'Edit', edit_article_path(@article) %> |
<%end%>
<%= link_to 'Back', articles_path %>